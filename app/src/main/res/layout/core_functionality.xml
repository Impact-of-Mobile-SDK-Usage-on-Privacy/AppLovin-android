<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".D_CoreFunctionality">

    <com.applovin.mediation.ads.MaxAdView
        android:id="@+id/bannerad"
        xmlns:maxads="http://schemas.applovin.com/android/1.0"
        maxads:adUnitId="c5f013403aae7ba3"
        android:background="@color/white"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/display_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initialize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/core_functionality_info" />

    <TextView
        android:id="@+id/core_functionality_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4. State: Basic Functionality"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>